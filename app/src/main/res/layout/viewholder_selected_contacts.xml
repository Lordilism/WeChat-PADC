<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="110dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginStart="@dimen/margin_medium"
        app:cardCornerRadius="@dimen/margin_medium"
        app:cardElevation="@dimen/margin_card_medium"
        app:cardUseCompatPadding="true">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="@dimen/margin_medium_2"
            app:cardCornerRadius="35dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivSelectedContactProfile"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_profile_demo" />

        </com.google.android.material.card.MaterialCardView>


        <TextView
            android:id="@+id/tvSelectedContactName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:text="Name"
            android:layout_marginBottom="@dimen/margin_card_medium"
            android:textColor="@color/black" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>